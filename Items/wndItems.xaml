<Window x:Class="GroupProject_WpfApp.Items.wndItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject_WpfApp.Items"
        mc:Ignorable="d"
        Title="Defenition Table" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <GroupBox Header="Items" Margin="0,10,0,0">
                <DataGrid Margin="0,10,0,0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Button Content="New" Height="30" Width="71" Margin="30,0,0,0"/>
                <Button Content="Save" Height="30" Width="71" Margin="30,0,0,0"/>
                <Button Content="Delete" Height="30" Width="71" Margin="30,0,0,0"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <GroupBox Header="Items" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="10,10,10,10">
                        <Button Content="^" Height="30" Width="71" Margin="0,0,0,30"/>
                        <Button Content="(down)" Height="30" Width="71"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="10,10,10,10">

                        <StackPanel Orientation="Horizontal">
                            <Label Content="Code: "/>
                            <TextBox Text="002"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label Content="Cost: "/>
                            <TextBox Text="$1000"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label Content="Name: "/>
                            <TextBox Text="Big Horse"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label Content="Description: "/>
                            <TextBox Text="its a really big horse"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="3">
            <GroupBox Header="Item Search" Margin="0,10,0,0">
                
            </GroupBox>
        </Grid>
    </Grid>
</Window>
