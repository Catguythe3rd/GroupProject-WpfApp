<Window x:Class="GroupProject_WpfApp.Search.editInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject_WpfApp.Search"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Label x:Name="pageLabel" Content="EDIT      SELECTED      INVOICE" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="newInvoiceNumber" HorizontalAlignment="Left" Margin="179,145,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Background="#FFD81B1B"/>
        <TextBox x:Name="newInvoiceDate" HorizontalAlignment="Left" Margin="511,145,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Background="#FFD81B1B"/>
        <TextBox x:Name="newInvoiceCharge" HorizontalAlignment="Center" Margin="0,145,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Background="#FFD81B1B"/>
        <Button x:Name="submit" Content="  Submit  " HorizontalAlignment="Center" Margin="0,302,0,0" VerticalAlignment="Top" Width="120" Height="26" Click="submit_Click"/>




    </Grid>
</Window>
